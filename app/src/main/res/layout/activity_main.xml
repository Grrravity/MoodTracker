<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relativeLayout"
    tools:context=".controller.MainActivity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_happy"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/smileyImage"
        android:src="@drawable/smileyhappy"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        />

    <ImageButton
        android:id="@+id/comment_button"
        android:src="@drawable/ic_note_add_black"
        android:background="@null"
        android:scaleType="fitStart"
        android:layout_width="40dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="30dp"
        android:layout_marginStart="30dp"
        android:layout_marginLeft="30dp"
        />

    <ImageButton
        android:id="@+id/history_button"
        android:src="@drawable/ic_history_black"
        android:background="@null"
        android:scaleType="fitCenter"
        android:layout_width="40dp"
        android:layout_height="50dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/comment_button"
        android:layout_marginEnd="30dp"
        android:layout_marginRight="30dp"
        />

    <ImageButton
        android:id="@+id/share_button"
        android:layout_width="40dp"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/history_button"
        android:layout_marginTop="13dp"
        android:background="@null"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_share_black"
        android:layout_alignLeft="@+id/history_button" />


    </RelativeLayout>