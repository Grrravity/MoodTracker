<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relativeLayout"
    tools:context=".Controller.MainActivity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_white"
    android:orientation="vertical"
    >

    <RelativeLayout
        android:id="@+id/yesterday"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="30dp"
        android:background="@color/color_sad">

        <ImageView
            android:id="@+id/first_comment"
            android:src="@drawable/ic_note_add_black"
            android:background="@null"
            android:scaleType="fitStart"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="5dp"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:visibility="visible"
            />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/two_days_ago"
        android:layout_width="125dp"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="100dp"
        android:background="@color/color_disappointed"
        >
        <ImageView
            android:id="@+id/second_comment"
            android:src="@drawable/ic_note_add_black"
            android:background="@null"
            android:scaleType="fitStart"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="5dp"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:visibility="visible"
            />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/three_days_ago"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="170dp"
        android:background="@color/color_normal"
        >
        <ImageView
            android:id="@+id/third_comment"
            android:src="@drawable/ic_note_add_black"
            android:background="@null"
            android:scaleType="fitStart"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="5dp"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:visibility="visible"
            />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/four_days_ago"
        android:layout_width="275dp"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="240dp"
        android:background="@color/color_happy"
        >
        <ImageView
            android:id="@+id/fourth_comment"
            android:src="@drawable/ic_note_add_black"
            android:background="@null"
            android:scaleType="fitStart"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="5dp"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:visibility="visible"
            />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/fifth_days_ago"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="310dp"
        android:background="@color/color_super_happy"
        >
        <ImageView
            android:id="@+id/fifth_comment"
            android:src="@drawable/ic_note_add_black"
            android:background="@null"
            android:scaleType="fitStart"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="5dp"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:visibility="visible"
            />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/six_days_ago"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="380dp"
        android:background="@color/color_normal"
        >
        <ImageView
            android:id="@+id/sixth_comment"
            android:src="@drawable/ic_note_add_black"
            android:background="@null"
            android:scaleType="fitStart"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="5dp"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:visibility="visible"
            />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/seven_days_ago"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="450dp"
        android:background="@color/color_normal"
        >
        <ImageView
            android:id="@+id/seventh_comment"
            android:src="@drawable/ic_note_add_black"
            android:background="@null"
            android:scaleType="fitStart"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="5dp"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:visibility="visible"
            />

    </RelativeLayout>

</RelativeLayout>